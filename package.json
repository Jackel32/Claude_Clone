{
  "name": "kinch-code",
  "version": "1.0.0",
  "type": "module",
  "description": "A CLI tool to interact with your codebase using a custom AI backend.",
  "main": "dist/index.js",
  "bin": {
    "kinch-code": "dist/cli.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "tsc",
    "start": "node dist/index.js",
    "cli": "node dist/cli.js",
    "index": "node dist/cli.js index",
    "dev": "ts-node src/app.ts",
    "test": "npm run build && vitest --run --no-file-parallelism --setup-files tests/setup.ts",
    "lint": "eslint . --ext .ts",
    "audit": "npm audit --audit-level=high"
  },
  "keywords": [
    "ai",
    "cli",
    "developer-tools",
    "typescript"
  ],
  "author": "AI Kinch Code",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "cli-progress": "^3.12.0",
    "diff": "^5.2.0",
    "express": "^5.0.1",
    "ignore": "^5.3.1",
    "inquirer": "^12.9.1",
    "lowdb": "^7.0.1",
    "ora": "^8.0.1",
    "pino": "^9.2.0",
    "tree-sitter": "^0.21.1",
    "tree-sitter-ada": "github:briot/tree-sitter-ada",
    "tree-sitter-c": "^0.21.0",
    "tree-sitter-c-sharp": "^0.20.0",
    "tree-sitter-cpp": "^0.21.0",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-typescript": "^0.21.1",
    "typescript": "^5.4.5",
    "vectra": "^0.11.1",
    "ws": "^8.18.0",
    "yargs": "^17.7.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/diff": "^5.2.1",
    "@types/inquirer": "^8.2.10",
    "@types/node": "^20.14.2",
    "@types/supertest": "^6.0.2",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.33.0",
    "pino-pretty": "^11.2.1",
    "rimraf": "^5.0.7",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
